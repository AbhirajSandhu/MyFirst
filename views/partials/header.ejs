<!DOCTYPE html>
<html>
	<head>
		<title>Yelpcamp</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>
		<div class="ui pointing menu">
		  <a class="active item">
  <i class="notched circle loading icon"></i>YelpCamp
		  </a>
		  <a class="ui item" href="/campgrounds">Home</a>
		  <div class="right menu">
			  <% if(!currentUser){ %>
				<a class="ui item" href="/login">Login</a>
				<a class="ui item" href="/register">Sign Up</a>
			  <% } else{ %>
			  	<a class="active item">Signed in as <%= currentUser.username %></a>
				<a class="ui item" href="/logout">Logout</a>
			  <% } %>
		  </div>
		</div>
	
<div class="container">
	<% if(error && error.length > 0){ %>
	<div class="alert alert-danger" role="alert">
  		<%= error %>
	</div>
	<% } %>
	<% if(success && success.length > 0){ %>
	<div class="alert alert-success" role="alert">
  		<%= success %>
	</div>
	<% } %>
</div>

